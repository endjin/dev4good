<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">

<head id="Head1" runat="server">
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
    <link href="/Content/styles/style.css" rel="stylesheet" type="text/css" />
    <link href="/Content/styles/forms.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="https://www.google.com/jsapi"></script>
    <script src="@Url.Content("/Content/js/jquery-1.6.1.min.js")" type="text/javascript"></script>    
    <script src="@Url.Content("/Content/js/modernizr-1.7.min.js")" type="text/javascript"></script>
    <title>@ViewBag.Title</title>    
</head>

<body>
<div class="TopBar">

    @if (Session["LOGGED_IN_USER"] == null)
    {
        using (Html.BeginForm("LoginApplicant", "Login"))
        {
            @Html.Label("email"); @Html.TextBox("email2");
            @Html.Label("password"); @Html.Password("password");
            @Html.SubmitButton();
        }
    }
    else
    {
        @Html.ActionLink("Log out", "LogOutApplicant", "Login");
    }
</div>
<div class="Heading">Goldsmith's Craft & Design Council: Craftsmanship & Design Awards</div>
   @RenderBody()
<div class="smallprint">Work in progress. Not for release</div>
</body>
</html>