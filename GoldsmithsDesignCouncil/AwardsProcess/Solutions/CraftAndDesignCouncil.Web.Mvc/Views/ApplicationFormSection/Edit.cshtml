@using CraftAndDesignCouncil.Web.Mvc.Controllers.ViewModels;

@model ApplicationFormSectionViewModel

@{
    ViewBag.Title = "ApplicationFormSection";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ApplicationFormSection</h2>

<h3>@Model.SectionTitle</h3>

@using (Html.BeginForm())
{
    foreach (QuestionAndAnswerViewModel qa in Model.Questions)
    {
        @qa.QuestionText
        @Html.TextBox("Answer_" + qa.QuestionId, qa.AnswerText);
        <br />
    }
    @Html.SubmitButton();
}

